<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/deepRed</item>
        <item name="colorAccent">@color/warmRed</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--选项卡 每个选项的样式-->
    <style name="Tabs">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/deepGray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--笔记详细内容文字的样式-->
    <style name="noteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/noteText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--笔记title内容文字的样式-->
    <style name="noteTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">@color/noteTitle</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--笔记用户姓名文字的样式-->
    <style name="userName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/userName</item>
        <item name="android:maxEms">4</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--推荐页tabLayout文字的样式-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
