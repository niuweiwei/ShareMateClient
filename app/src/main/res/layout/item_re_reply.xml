<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/userIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userName"
            android:text="username"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/userName"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="回复  "
            android:textSize="18sp"
            android:id="@+id/r"
            android:textColor="@color/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="repliedName"
            android:textSize="18sp"
            android:layout_toRightOf="@id/r"
            android:id="@+id/repliedName"
            android:textColor="@color/softBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="回复内容"
            android:layout_below="@id/repliedName"
            android:id="@+id/reReplyDetail"
            android:textSize="18sp"
            android:textColor="@color/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="date"
            android:layout_below="@id/reReplyDetail"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:id="@+id/replyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/pickBtn"
        android:background="@mipmap/pick"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>