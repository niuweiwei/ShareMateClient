<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/userIcon"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:id="@+id/reply"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/userName"
            android:text="username"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/userName"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
            <TextView
                android:text=" 回复: "
                android:textSize="15sp"
                android:id="@+id/r"
                android:visibility="invisible"
                android:textColor="@color/softBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="repliedName"
                android:textSize="15sp"
                android:visibility="invisible"
                android:id="@+id/repliedName"
                android:textColor="@color/noteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="回复内容"
            android:textSize="16sp"
            android:id="@+id/replyDetail"
            android:textColor="@color/noteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="date"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:id="@+id/replyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/pickReply"
        android:background="@mipmap/pick"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="-40dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</LinearLayout>
</LinearLayout>