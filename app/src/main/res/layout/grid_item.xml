<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/goodImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <RelativeLayout
        android:layout_marginTop="210dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="蛋糕名称"
            android:id="@+id/goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/goodDetail"
            android:text="蛋糕详情"
            android:layout_marginTop="10dp"
            android:layout_below="@id/goodName"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20dp"
            android:text="包邮"
            android:id="@+id/baoYou"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_below="@id/goodDetail"
            android:layout_width="40dp"
            android:layout_height="30dp"
            />
        <TextView
                android:text="￥"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/baoYou"
                android:textColor="@android:color/holo_orange_dark"
                android:id="@+id/goodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <Button
                android:clickable="false"
                android:id="@+id/shopCart"
                android:layout_below="@id/baoYou"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/shopcart"
                android:layout_width="30dp"
                android:layout_height="30dp" />
    </RelativeLayout>
</RelativeLayout>