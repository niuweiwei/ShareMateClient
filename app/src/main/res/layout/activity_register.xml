<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back" />

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/username" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入用户名"
            android:singleLine="true"
            android:textSize="@dimen/TextSize_5" />
    </LinearLayout>
    <TextView
        android:id="@+id/error_name"
        android:layout_below="@id/iv_back"
        android:layout_toRightOf="@id/linear_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/warmRed"/>

    <View
        android:id="@+id/view_name"
        android:layout_width="201dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_name"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_name"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/pswd" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入密码"
            android:password="true"
            android:singleLine="true"
            android:textSize="@dimen/TextSize_5" />
    </LinearLayout>
    <TextView
        android:id="@+id/error_password"
        android:layout_below="@id/linear_name"
        android:layout_toRightOf="@id/linear_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/warmRed"/>
    <View
        android:id="@+id/view_password"
        android:layout_width="201dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_password"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear_confirm_pswd"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_password"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/pswd" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="确认密码"
            android:password="true"
            android:singleLine="true"
            android:textSize="@dimen/TextSize_5" />
    </LinearLayout>
    <TextView
        android:id="@+id/error_confirm_pwsd"
        android:layout_below="@id/view_password"
        android:layout_toRightOf="@id/linear_confirm_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/warmRed"/>
    <View
        android:id="@+id/view_confirm_pwsd"
        android:layout_width="201dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_confirm_pswd"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear_phone"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_confirm_pwsd"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入联系方式"
            android:singleLine="true"
            android:textSize="@dimen/TextSize_5" />
    </LinearLayout>
    <TextView
        android:id="@+id/error_phone"
        android:layout_below="@id/view_confirm_pwsd"
        android:layout_toRightOf="@id/linear_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/warmRed"/>
    <View
        android:id="@+id/view_phone"
        android:layout_width="201dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/linear_phone"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/colorView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linear_code"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_phone"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/et_phoneCodes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="输入验证码"
            android:singleLine="true"
            android:textSize="@dimen/TextSize_5" />

        <ImageView
            android:id="@+id/iv_showCode"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/image_code" />
    </LinearLayout>

    <!--<View-->
        <!--android:id="@+id/view_code"-->
        <!--android:layout_width="201dp"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_below="@id/linear_code"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@color/colorView"-->
        <!--android:layout_centerHorizontal="true"/>-->

    <Button
        android:id="@+id/btn_true"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/linear_code"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/TextSize_4"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>